{
    "Statement": [
        {
            "Effect": "Allow",
            "Action": "s3:ListAllMyBuckets",
            "Resource": "arn:aws:s3:::*"
        },
        {
            "Effect": "Allow",
            "Action": "s3:*",
            "Resource": [
                "arn:aws:s3:::lightning-static",
                "arn:aws:s3:::lightning-static/*",
                "arn:aws:s3:::lightning-media",
                "arn:aws:s3:::lightning-media/*"
            ]
        }
    ]
}
